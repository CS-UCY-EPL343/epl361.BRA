<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="backClicked"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/broadwayrestarauntlogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="top"
                android:orientation="vertical"
                android:padding="30dp">


                <TextView
                    android:id="@+id/description_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="5"
                    android:padding="15dp"
                    android:text="Table 1&#10;\u0009Souvlaki kotopoullo-xwris maintano x1&#10;\u0009Mprizola me patates x3&#10;\u0009Souvlaki xoirino x2&#10;\u0009Salata xwriatiki x3&#10;\u0009Merida makaronia tou fournou x2&#10;\u0009Coca cola 375ml x5&#10;\u0009Mpires Carslsberg 1L x3"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    tools:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="top|right"
                    android:orientation="vertical"
                    tools:background="@color/colorPrimary">

                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/description_text"
                        android:background="@drawable/plus"
                        android:clickable="true"
                        />


                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/description_text"
                        android:background="@drawable/minus"
                        android:clickable="true"
                        android:visibility="gone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="5"
                    android:padding="15dp"
                    android:text="Table 5&#10;\u0009Souvlaki xoirino-xwris krampi x1&#10;\u0009Mprizola me patates x2&#10;\u0009Souvlaki kotopoullo x2&#10;\u0009Salata xwriatiki x1&#10;\u0009Merida makaronia tou fpournou x1&#10;\u0009Coca cola 375ml x3"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    tools:background="@android:color/holo_green_light" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="top|right"
                    android:orientation="vertical"
                    tools:background="@android:color/holo_green_light">

                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/description_text"
                        android:background="@drawable/plus"
                        android:clickable="true"
                        />


                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/description_text"
                        android:background="@drawable/minus"
                        android:clickable="true"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="top"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="5"
                    android:padding="15dp"
                    android:text="Table 8&#10;\u0009Souvlaki mix x3&#10;\u0009Mprizola me patates x3&#10;\u0009Souvlaki kotopoullo x3&#10;\u0009Manitarakia x1&#10;\u0009Souvla arni x2&#10;\u0009Mpires Carlsberg 1L x5"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    tools:background="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="right"
                    android:orientation="vertical"
                    tools:background="@color/colorPrimaryDark">

                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/description_text"
                        android:background="@drawable/plus"
                        android:clickable="true" />


                    <ImageButton
                        android:id="@+id/minus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/description_text"
                        android:background="@drawable/minus"
                        android:clickable="true"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>